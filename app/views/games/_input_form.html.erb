<div data-tabs-target="tabPanel" id="tab-2" <% if from_view %> class="hidden"<% end %>>
  <p class="mb-6">
    Start by defining your grid manually. Use "." to represent a dead cell and "*" to represent a live cell.
  </p>

  <%= form_with model: game, url: games_path do |form| %>
    <%= form.fields_for :generations do |g_form| %>
      <%= alert_error(game.errors.full_messages) %>
      <div class="flex flex-wrap -mx-3 mb-2">
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <%= g_form.label :counter, class: "text-white text-xs font-bold mb-2" %>
          <%= g_form.number_field :counter, required: true, step: 1, min: 1, class: "block w-full text-gray-700 border-none rounded py-2 px-3 focus:outline-none" %>
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <%= g_form.label :rows, class: "text-white text-xs font-bold mb-2" %>
          <%= g_form.number_field :rows, required: true, step: 1, min: 2, class: "block w-full text-gray-700 border-none rounded py-2 px-3 focus:outline-none" %>
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <%= g_form.label :columns, class: "text-white text-xs font-bold mb-2" %>
          <%= g_form.number_field :columns, required: true, step: 1, min: 2, class: "block w-full text-gray-700 border-none rounded py-2 px-3 focus:outline-none" %>
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <%= g_form.label :matrix, class: "text-white text-xs font-bold mb-2" %>

          <%= g_form.text_area :matrix,
                              rows: 8,
                              required: true,
                              placeholder: "Use '*' for live cells and '.' for dead cells. Example:\n\n..*...**\n.**....*\n**...**.",
                              class: "block w-full text-gray-700 border-none rounded py-2 px-3 focus:outline-none" %>
        </div>
      </div>
      <%= form.submit "Start", class: "block w-full px-6 py-3 text-center text-lg shadow font-semibold rounded-md bg-lime-400 text-emerald-900 hover:bg-lime-500 hover:text-black transition duration-200" %>
    <% end %>
  <% end %>
</div>
